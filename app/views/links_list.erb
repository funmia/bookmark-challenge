<DOCTYPE html>
  <head>
    <title> Bookmark Manager </title>
  </head>
  <body>

    <ul id='links'>
      <% @links.each do |link| %>
        <li>
          Title: <%= link.title %>
          URL:   <%= link.url   %>
          Tags: <%= link.tags.map(&:name).join %>
        </li>
      <% end %>
    </ul>
  </body>
</html>
